rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ⚠️ TEMPORARY DEVELOPMENT RULES
    // - Anyone can read data
    // - Writes allowed only if user is signed in (even anonymously)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
