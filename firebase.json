{
  "hosting": {
    "public": "public",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "firebase.json",
      ".firebaserc",
      ".git/**",
      ".github/**",
      ".vscode/**",
      "scripts/**",
      "README.md",
      "LICENSE"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

  "firestore": {
    "rules": "firestore.rules"
  },

  "emulators": {
    "firestore": {
      "port": 8081
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
